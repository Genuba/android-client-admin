<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:id="@+id/view_bar">

    <ImageView
            android:layout_width="73dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_height="0dp"/>
    <TextView
            android:text="clientIdent"
            android:layout_height="20dp"
            android:id="@+id/textView_clientIdent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"/>
    <TextView
            android:text="clientFname"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:id="@+id/textView_clientFname" app:layout_constraintEnd_toEndOf="@+id/textView_clientIdent"
            app:layout_constraintStart_toStartOf="@+id/textView_clientIdent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView_clientIdent"/>
    <TextView
            android:text="clientLname"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="@+id/textView_clientFname"
            app:layout_constraintEnd_toEndOf="@+id/textView_clientFname" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_clientFname"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:background="@android:color/black"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="16dp"/>
</android.support.constraint.ConstraintLayout>
